{
  "name": "chartjs-card",
  "version": "1.1.1",
  "description": "Chart.js card to Home Assistant",
  "main": "src/index.js",
  "keywords": [
    "chartjs",
    "homeassistant",
    "home-assistant"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/plckr/chartjs-card"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "chartjs-plugin-annotation": "^3.1.0",
    "chartjs-plugin-zoom": "^2.2.0",
    "lit": "^3.3.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "rollup": "^4.54.0",
    "rollup-plugin-serve": "^3.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c --watch",
    "start": "npm run watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "start:hass-stable": "docker run --rm -p8123:8123 -v ./.hass_dev:/config homeassistant/home-assistant:stable",
    "start:hass": "docker run --rm -p8123:8123 -v ./.hass_dev:/config homeassistant/home-assistant:beta",
    "start:hass-dev": "docker run --rm -p8123:8123 -v ./.hass_dev:/config homeassistant/home-assistant:dev",
    "stop:hass": "docker compose down",
    "logs:hass": "docker compose logs -f",
    "check-types": "tsc --noEmit",
    "validate": "npm run format:check && npm run check-types && npm run test:run"
  },
  "author": "Ricardo Reis",
  "license": "ISC"
}
